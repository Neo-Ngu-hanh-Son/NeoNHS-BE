      }
    },
    {
      "name": "13. Get Vendor's Workshop Templates",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/admin/vendors/:vendorId/workshop-templates?page=1&size=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "admin", "vendors", ":vendorId", "workshop-templates"],
