      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/admin/vendors/filter?isVerified=true&isActive=true&isBanned=false&page=1&size=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "admin", "vendors", "filter"],
          "query": [
            {
              "key": "isVerified",
              "value": "true"
