      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/admin/vendors/:vendorId",
          "host": ["{{baseUrl}}"],
          "path": ["api", "admin", "vendors", ":vendorId"],
          "variable": [
            {
              "key": "vendorId",
              "value": "REPLACE_WITH_VENDOR_ID_TO_DELETE"
            }
          ]
